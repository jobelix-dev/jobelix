{
  "name": "jobelix",
  "version": "0.2.4",
  "main": "src/main/index.js",
  "description": "Jobelix Desktop Application",
  "author": "Jobelix",
  "private": true,
  "scripts": {
    "dev": "concurrently \"next dev\" \"electron .\"",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "build-installer": "electron-builder",
    "release": "electron-builder --publish always"
  },
  "build": {
    "appId": "com.jobelix.app",
    "productName": "Jobelix",
    "publish": [
      {
        "provider": "github",
        "owner": "jobelix-dev",
        "repo": "jobelix-releases"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/main/**/*",
      "preload.js",
      "loader.html",
      "update-required.html",
      "package.json",
      "build/license.txt",
      "!.next/**/*",
      "!app/**/*",
      "!lib/**/*",
      "!public/**/*",
      "!supabase/**/*",
      "!docs/**/*",
      "!tests/**/*",
      "!node_modules/.cache/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/${os}/",
        "to": "./${os}/",
        "filter": [
          "main/main",
          "main/main.exe",
          "main/_internal/", 
          "version.txt"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "license": "build/license.txt"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns",
      "category": "public.app-category.utilities",
      "hardenedRuntime": true
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png",
      "category": "Utility"
    }
  },
  "dependencies": {
    "@ai-sdk/openai": "^3.0.1",
    "@ai-sdk/react": "^3.0.3",
    "@stripe/react-stripe-js": "^5.4.1",
    "@stripe/stripe-js": "^8.6.1",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.89.0",
    "@vercel/analytics": "^1.6.1",
    "ai": "^6.0.3",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "lucide-react": "^0.562.0",
    "next": "16.1.0",
    "openai": "^6.15.0",
    "pdf-parse-fork": "^1.2.0",
    "pdf2json": "^4.0.0",
    "pdfjs-dist": "^5.4.530",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "resend": "^6.7.0",
    "server-only": "^0.0.1",
    "stripe": "^20.1.2",
    "yaml": "^2.8.2",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "16.1.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
